<html>
<head>
    <title>Your Car Dealership's Homepage</title>
</head>
<body>
    <h1>Your Car Dealership</h1>
    <form action='/cars' method='post'>
        <div class='form-group'>
            <label for='price'>Preferred Price</label>
            <input id='price' name='price' class='form-control' type='number'>
        </div>
        <div class='form-group'>
            <label for='mileage'>Preferred mileage</label>
            <input id='mileage' name='mileage' class='form-control' type='number'>
        </div>
        <button type='submit' class='btn'>Go!</button>
    </form>

    {% if cars is not empty %}
        {% for car in cars %}
            <h1>Car type: {{ car.getType }} </h1>
            <h3>Price: {{ car.getPrice }} </h3>
            <h3>Mileage: {{ car.getMileage }} </h3>
            <h3>Condition: {{ car.getCondition }} </h3>
            <img src="{{ car.getImage }}">

        {% endfor %}
    {% endif %}

  </body>
</html>
